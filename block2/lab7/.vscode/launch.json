    "version": "0.2.0",
    "configurations": [
        {
			"name": "Debug Active Flow Editor",
			"type": "flow",
			"request": "launch",
			"target": "${file}",
			"cwd": "${workspaceRoot}",
			"runner_path": "${config:flow.root}/bin/flowcpp",
			"compiler": "${command:FlowCompiler}",
			"arguments": "devtrace=1 port=80",
			// "debugger_args": "--screensize 1000 600"
		}
    ]
}